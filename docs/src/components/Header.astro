---
import logo from '@/assets/logo.svg'
import github from '@/assets/github.svg'
import { appName, headerLinks } from '@/utils/constants'
---

<header>
  <div class={`wrapper docs-container ${Astro.props.stretch ? 'stretch' : ''}`}>
    <a class="logo" href="/">
      <img src={logo} alt="logo" height="40" />
      <p>{appName}</p>
    </a>
    <nav>
      <ul>
        {
          headerLinks.map(({ title, url }) => (
            <li>
              <a
                class={Astro.url.pathname.includes(url) ? 'active' : undefined}
                href={url}
                target={url.startsWith('http') ? '_blank' : undefined}
              >
                {title === 'GitHub' ? (
                  <img src={github} alt="GitHub" height="24" />
                ) : (
                  title
                )}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<div class="spacing"></div>

<style>
  header {
    position: fixed;
    background-color: var(--dark);
    width: 100%;
    z-index: 10;
  }

  .wrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-weight: 500;
    color: var(--light);
    text-decoration: none;
  }

  .logo > img {
    margin-right: 0.3rem;
  }

  ul {
    list-style-type: none;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin: 1.2rem 0;
    padding: 0;
  }

  ul > li > a {
    text-decoration: none;
    color: inherit;
  }

  ul > li > a.active {
    font-weight: 500;
  }

  ul img {
    display: block;
    filter: invert(1);
  }

  .spacing {
    height: 4rem;
  }
</style>
